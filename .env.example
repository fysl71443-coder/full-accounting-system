# إعدادات التطبيق الأساسية
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
SECURITY_PASSWORD_SALT=your-salt-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///instance/accounting_system_pro.db
# DATABASE_URL=postgresql://username:password@localhost:5432/accounting_db
# DATABASE_URL=mysql://username:password@localhost:3306/accounting_db

# إعدادات Redis للتخزين المؤقت
REDIS_URL=redis://localhost:6379/0

# إعدادات البريد الإلكتروني
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# إعدادات الأمان
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=false
TWO_FACTOR_ENABLED=false

# إعدادات السجلات
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# إعدادات النسخ الاحتياطي
BACKUP_FOLDER=backups
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# إعدادات الأداء
ENABLE_COMPRESSION=true
MINIFY_HTML=true
CACHE_TYPE=simple

# إعدادات API
API_RATE_LIMIT=100 per hour

# إعدادات المراقبة
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn

# إعدادات التخزين السحابي
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket

# إعدادات Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# إعدادات Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# إعدادات Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# إعدادات المصادقة الاجتماعية
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

FACEBOOK_OAUTH_CLIENT_ID=your-facebook-client-id
FACEBOOK_OAUTH_CLIENT_SECRET=your-facebook-client-secret

# إعدادات الدفع
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# إعدادات الرسائل النصية
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# إعدادات الترجمة
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# إعدادات التطوير
DEBUG=false
TESTING=false
FLASK_DEBUG=false

# إعدادات الإنتاج
WORKERS=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEPALIVE=2

# إعدادات SSL
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem

# إعدادات المنطقة الزمنية
TIMEZONE=Asia/Riyadh
DEFAULT_LANGUAGE=ar

# إعدادات الملفات
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,xlsx,csv

# إعدادات الجلسة
SESSION_TIMEOUT=86400  # 24 ساعة
PERMANENT_SESSION_LIFETIME=86400

# إعدادات كلمة المرور
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# إعدادات تحديد معدل الطلبات
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
DEFAULT_RATE_LIMIT=1000 per hour

# إعدادات المراقبة المتقدمة
PROMETHEUS_METRICS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_ENABLED=true

# إعدادات التحليلات
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# إعدادات الإشعارات
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# إعدادات النسخ الاحتياطي المتقدمة
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_COMPRESSION_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_CLOUD_STORAGE_ENABLED=false

# إعدادات الأمان المتقدمة
SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION_ENABLED=true
XSS_PROTECTION_ENABLED=true
CLICKJACKING_PROTECTION_ENABLED=true

# إعدادات التخزين المؤقت المتقدمة
CACHE_DEFAULT_TIMEOUT=300
CACHE_THRESHOLD=500
CACHE_KEY_PREFIX=accounting_

# إعدادات قاعدة البيانات المتقدمة
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# إعدادات الشبكة
PROXY_COUNT=1
TRUSTED_PROXIES=127.0.0.1

# إعدادات التصحيح
PROFILING_ENABLED=false
QUERY_PROFILING_ENABLED=false
TEMPLATE_PROFILING_ENABLED=false
